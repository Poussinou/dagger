<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="inspector"
            type="com.nikola.jakshic.truesight.MatchDetailInspector"/>
    </data>

    <LinearLayout
        tools:ignore="SmallSp"
        android:id="@+id/expand_match_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                tools:text="Hero damage: 12000"
                android:id="@+id/herodamage_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@{inspector.getHeroDamage()}" />

            <TextView
                android:id="@+id/towerdamage_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                tools:text="Tower damage: 299"
                android:text="@{inspector.getTowerDamage()}" />

            <TextView
                tools:text="Hero healing: 12"
                android:id="@+id/hero_healing_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@{inspector.getHeroHealing()}"
                android:textSize="11sp" />

            <TextView
                tools:text="Stuns: 12"
                android:id="@+id/hero_stuns_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@{inspector.getHeroStuns()}"
                android:textSize="11sp" />

            <TextView
                tools:text="Last hits: 112"
                android:id="@+id/lasthits_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@{inspector.getLastHits()}"
                android:textSize="11sp" />

            <TextView
                tools:text="Denies: 29"
                android:id="@+id/denies_tv"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="11sp"
                android:text="@{inspector.getDenies()}" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/content_description_item"
                    android:background="#d3d3d3"
                    android:id="@+id/backpack_0"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:alpha="0.4"
                    app:imageUrl="@{inspector.getBackpack0()}"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <ImageView
                    android:contentDescription="@string/content_description_item"
                    android:background="#d3d3d3"
                    app:imageUrl="@{inspector.getBackpack1()}"
                    android:id="@+id/backpack_1"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:alpha="0.4"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />

                <ImageView
                    android:contentDescription="@string/content_description_item"
                    android:background="#d3d3d3"
                    app:imageUrl="@{inspector.getBackpack2()}"
                    android:id="@+id/backpack_2"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:alpha="0.4"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/obs_tv"
                        tools:text="13x"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{inspector.getObservers()}"
                        android:textSize="11sp" />

                    <ImageView
                        android:contentDescription="@string/content_description_item"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_observer" />

                    <TextView
                        tools:text="4x"
                        android:id="@+id/sen_tv"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:text="@{inspector.getSentries()}"
                        android:textSize="11sp" />

                    <ImageView
                        android:contentDescription="@string/content_description_item"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sentry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        tools:text="GPM: 499"
                        android:id="@+id/gpm_tv"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:text="@{inspector.getGpm()}"
                        android:textSize="11sp" />

                    <TextView
                        tools:text="XPM: 388"
                        android:id="@+id/xpm_tv"
                        android:layout_marginTop="6dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@{inspector.getXpm()}"
                        android:textSize="11sp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
