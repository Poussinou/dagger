<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="inspector"
            type="com.nikola.jakshic.truesight.inspector.CompetitiveInspector" />

    </data>

    <LinearLayout
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/text_match_pro_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="@{inspector.getLeagueName()}"
            android:textSize="12sp"
            tools:text="PGL BUCHAREST MAJOR 2018" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_match_pro_radiant_name"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                app:setTrophy="@{inspector.isRadiantWin()}"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@{inspector.getRadiantName()}"
                tools:drawableLeft="@drawable/ic_trophy"
                tools:drawableStart="@drawable/ic_trophy"
                tools:text="CDEC Gaming" />

            <TextView
                android:id="@+id/text_match_pro_radiant_score"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@{inspector.getRadiantScore()}"
                tools:text="37" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_match_pro_dire_name"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                app:setTrophy="@{!inspector.isRadiantWin()}"
                android:drawablePadding="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@{inspector.getDireName()}"
                tools:drawableLeft="@drawable/ic_trophy_invisible"
                tools:drawableStart="@drawable/ic_trophy_invisible"
                tools:text="Vici Gaming Potential" />

            <TextView
                android:id="@+id/text_match_pro_dire_score"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@{inspector.getDireScore()}"
                tools:text="24" />
        </LinearLayout>
    </LinearLayout>
</layout>