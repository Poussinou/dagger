<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nikola.jakshic.dagger">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DaggerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_dagger"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dagger_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.PlayerActivity"
            android:theme="@style/DetailTheme" />
        <activity
            android:name=".view.activity.HomeActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.SearchActivity"
            android:theme="@style/SearchTheme" />
        <activity android:name=".view.activity.MatchActivity" />
        <activity
            android:name=".view.activity.SettingsActivity"
            android:label="Settings"
            android:parentActivityName=".view.activity.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.activity.HomeActivity" />
        </activity>
    </application>

</manifest>